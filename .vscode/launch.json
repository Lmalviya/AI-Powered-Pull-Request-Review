{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Webhook Service (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/services/webhook",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services/webhook",
                "GITHUB_WEBHOOK_SECRET": "test_secret",
                "GITLAB_WEBHOOK_SECRET": "test_secret"
            },
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Webhook Tests (Pytest)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-vv",
                "tests/test_webhook.py"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/services/webhook",
                "GITHUB_WEBHOOK_SECRET": "test_secret",
                "GITLAB_WEBHOOK_SECRET": "test_secret"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
